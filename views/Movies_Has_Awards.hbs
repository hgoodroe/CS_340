    <main>
        <section>
            <h2>Awards Movies have won!</h2>
            <table id="moviesHasAwardsTable">
                {{!-- Header section --}}
                <thead>
                    <tr>
                        {{#each movies_awards.[0]}}
                        <th>
                            {{@key}}
                        </th>
                        {{/each}}
                    </tr>
                </thead>

                {{!-- Body section --}}
                <tbody>
                    {{!-- For each row, print each ID, movie name, age rating, release date, IMDB rating,
                    Rottent tomatoes rating, # of times rented, sub-genre --}}
                    {{#each movies_awards}}
                    <tr>
                        <td>{{this.Movie}}</td>
                        <td>{{this.Award}}</td>
                    </tr>
                    {{/each}}
                </tbody>
                <table />

                <form id="add-movie-award-form" method="POST" action="/add-movie-award-form">

                    <label for="input_movie">Movie: </label>
                    <select name="input_movie" id="input_movie">
                    <option>Select Movie</option>
                    {{#each movies}}
                    <option value="{{this.movie_ID}}">{{this.movie_name}}</option>
                    {{/each}}
                    </select>

                    <label for="input_award">Award: </label>
                    <select name="input_award" id="input_award">
                    <option>Add an Award</option>
                    {{#each awards}}
                    <option value="{{this.award_ID}}">{{this.award}}</option>
                    {{/each}}
                    </select>
                    <input type="submit">

                </form>

        </section>
    </main>
