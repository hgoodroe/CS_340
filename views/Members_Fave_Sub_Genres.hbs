<head>
    <meta charset="utf-8" />
    <title>Members_fave_Sub_Genres Subpage </title>
    <link id="styleSheet" href="style.css" rel="stylesheet" type="text/css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>

<headers>

</headers>

<body>
    <header>
        <!-- <h1>Members Favorite Sub-Genres</h1> -->
    </header>
    <main>
        <section>
            <h2>Members can pick their favorite sub-genres to get movie suggestions!</h2>
            <table id="favesTable">
                {{!-- Header section --}}
                <thead>
                    <tr>
                        {{#each data.[0]}}
                        <th>
                            {{@key}}
                        </th>
                        {{/each}}
                        <th>Delete</th>
                    </tr>
                </thead>

                {{!-- Body section --}}
                <tbody>
                    {{!-- For each row, print each ID, movie name, age rating, release date, IMDB rating,
                    Rottent tomatoes rating, # of times rented, sub-genre --}}
                    {{#each data}}
                    <tr>
                        <td>{{this.member_ID}}</td>
                        <td>{{this.sub_genre_ID}}</td>
                    </tr>
                    {{/each}}
                </tbody>
                <table />

                <form method="POST" id="MembersFaves">
                    <fieldset>
                        <legend>Add Favorites</legend>
                        <label for="addFaves">Member <input type="text" name="addFaves" autofocus
                                placeholder="Enter Member ID" required></label>

                        <p>Select your favorite Sub-Genres</p>
                        <label for="Dystopia">
                            <input type="checkbox" name="Dystopia" value="Dystopia" />
                            Dystopia</label>

                        <label for="SpaceOpera">
                            <input type="checkbox" name="SpaceOpera" value="SpaceOpera" />
                            Space Opera</label>

                        <label for="Cyberpunk">
                            <input type="checkbox" name="Cyberpunk" value="Cyberpunk" />
                            Cyberpunk</label>

                        <label for="SpaceWestern">
                            <input type="checkbox" name="SpaceWestern" value="SpaceWestern" />
                            Space Western</label>

                        <label for="Apocalyptic">
                            <input type="checkbox" name="Apocalyptic" value="Apocalyptic" />
                            Apocalyptic</label>

                        <label for="PostApocalyptic">
                            <input type="checkbox" name="PostApocalyptic" value="PostApocalyptic" />
                            Post-Apocalyptic</label>

                        <label for="HardScience">
                            <input type="checkbox" name="HardScience" value="HardScience" />
                            Hard Science Fiction</label>


                        <button type="submit">Done</button>
                    </fieldset>
                    <fieldset>

                        <legend>Delete a Favorite</legend>

                        <label for="editFaves">Member <input type="text" name="editFaves" autofocus
                                placeholder="Enter Member ID" required></label>

                        <label for="removeFave">Remove a Favorite <select name="removeFave">
                                <option value="Dystopia">Dystopia</option>
                                <option value="SpaceOpera">Space Opera</option>
                                <option value="Cyberpunk">Cyberpunk</option>
                                <option value="SpaceWestern">Space Western</option>
                                <option value="Apocalyptic">Apocalyptic</option>
                                <option value="PostApocalyptic">Post-Apocalyptic</option>
                                <option value="HardScience">Hard Science Fiction</option>
                            </select></label>
                        <button type="remove">Submit to Remove a Favorite</button>
                    </fieldset>
                </form>

        </section>
    </main>
</body>