<body>
    <header>
        <h1>CREATE / READ Sub-Genres</h1>
    </header>
    <main>
        <section>
            <h2>Scifi Movie Sub-Genres </h2>
            <table id="sub_genreTable">
                {{!-- Header section --}}
                <thead>
                    <tr>
                        {{#each data.[0]}}
                        <th>
                            {{@key}}
                        </th>
                        {{/each}}
                    </tr>
                </thead>

                {{!-- Body section --}}
                <tbody>
                    {{#each data}}
                    <tr data-value="{{this.sub_genre_ID}}">
                        <td>{{this.sub_genre_ID}}</td>
                        <td>{{this.sub_genre}}</td>
                    </tr>
                    {{/each}}
                </tbody>
                <table />

                <!-- Code for the INSERT function (add a sub-genre)
