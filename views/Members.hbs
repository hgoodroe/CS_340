<body>
    <header>
        <!-- <h1>Members</h1> -->
    </header>
    <main>
        <section>
            <h2>Member Info</h2>
            <table id="MemberTable">
                {{!-- Header section --}}
                <thead>
                    <tr>
                        {{#each data.[0]}}
                        <th>
                            {{@key}}
                        </th>
                        {{/each}}
                    </tr>
                </thead>

                {{!-- Body section --}}
                <tbody>
                    {{#each data}}
                    <tr data-value="{{this.member_ID}}">
                        <td>{{this.member_ID}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.address}}</td>
                        <td>{{this.months_a_member}}</td>
                    </tr>
                    {{/each}}
                </tbody>

            </table>
            <section />

            <form method="POST" id="addMember">
                <fieldset>
                    <legend>Add New Member</legend>
                    <label for="name">Name<input type="text" name="name" id="name" autofocus placeholder="Name"
                            required></label>

                    <label for="email">Email<input type="email" name="email" id="email" placeholder="Email"
                            required></label>

                    <label for="address">Address<textarea name="address" id="address" minlength="2" maxlength="300"
                            placeholder="Please enter your mailing address" required></textarea></label>

                    <button type="submit">Submit</button>
                </fieldset>
            </form>

        </section>
    </main>
